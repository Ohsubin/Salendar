<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_rightbot"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/manbogi"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/title_myprofile"
            android:fontFamily="@font/nanumbarunpenr"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="50sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idText"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/savebar_name"
                android:fontFamily="@font/nanumbarunpenr"
                android:paddingLeft="120dp"
                android:paddingTop="12dp"
                android:text="안녕"
                android:textColor="#5a5959"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/ageText"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/savebar_age"
                android:fontFamily="@font/nanumbarunpenr"
                android:paddingLeft="120dp"
                android:paddingTop="12dp"
                android:text="안녕"
                android:textColor="#5a5959"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/genderText"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/savebar_gender"
                android:fontFamily="@font/nanumbarunpenr"
                android:paddingLeft="120dp"
                android:paddingTop="12dp"
                android:text="안녕"
                android:textColor="#5a5959"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tallText"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/savebar_height"
                android:fontFamily="@font/nanumbarunpenr"
                android:paddingLeft="120dp"
                android:paddingTop="12dp"
                android:text="안녕"
                android:textColor="#5a5959"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/weightText"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/savebar_weight1"
                android:fontFamily="@font/nanumbarunpenr"
                android:paddingLeft="120dp"
                android:paddingTop="12dp"
                android:text="안녕"
                android:textColor="#5a5959"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/estimateText"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/savebar_basal_metabolism"
                android:fontFamily="@font/nanumbarunpenr"
                android:paddingLeft="120dp"
                android:paddingTop="12dp"
                android:text="안녕"
                android:textColor="#5a5959"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/levelText"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/savebar_obesity"
                android:fontFamily="@font/nanumbarunpenr"
                android:paddingLeft="120dp"
                android:paddingTop="12dp"
                android:text="안녕"
                android:textColor="#5a5959"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/goalText"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/savebar_weight2"
                android:fontFamily="@font/nanumbarunpenr"
                android:paddingLeft="120dp"
                android:paddingTop="12dp"
                android:text="안녕"
                android:textColor="#5a5959"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/loginBtn"
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="#272727"
                    android:fontFamily="@font/nanumbarunpenr"
                    android:onClick="onClick"
                    android:text="수 정"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/resetBtn"
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="#272727"
                    android:fontFamily="@font/nanumbarunpenr"
                    android:onClick="onresetClick"
                    android:text="취 소"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>